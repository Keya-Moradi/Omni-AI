<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Chatbox</title>
</head>
<body>
    <h1>AI Chatbox</h1>
    <h2>Topic: <%= conversation.title %></h2>

    <!-- Display conversation messages -->
    <div id="messages">
        <% conversation.messages.forEach(function(message) { %>
            <p><strong><%= message.sender %>:</strong> <%= message.content %></p>
        <% }); %>
    </div>

    <!-- Prompt input form -->
    <form action="/conversation/ai" method="POST">
        <input type="hidden" name="conversationId" value="<%= conversation._id %>">
        <input type="text" name="prompt" placeholder="Enter your prompt" required>
        <button type="submit">Send to AI</button>
    </form>

    <a href="/dashboard">Back to Dashboard</a>
</body>
</html>
